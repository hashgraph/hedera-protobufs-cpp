{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "displayName": "VCPkg Base Build",
      "description": "Configured via the vcpkg toolchain",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/package",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "HAPI_VERSION_TAG": {
          "type": "STRING",
          "value": "$env{HAPI_VERSION_TAG}"
        },
        "VCPKG_BINARY_SOURCES": {
          "type": "STRING",
          "value": "clear"
        }
      }
    },
    {
      "name": "linux-x64-release",
      "inherits": ["vcpkg-base"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-linux-release"
        }
      }
    },
    {
      "name": "macos-x64-release",
      "inherits": ["vcpkg-base"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-osx-release"
        }
      }
    },
    {
      "name": "macos-arm64-release",
      "inherits": ["vcpkg-base"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "arm64-osx"
        }
      }
    },
    {
      "name": "windows-x64-release",
      "inherits": ["vcpkg-base"],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-release"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-x64-release",
      "configurePreset": "linux-x64-release",
      "displayName": "Build ninja-multi-vcpkg",
      "description": "Build ninja-multi-vcpkg Configurations",
      "configuration": "Release",
      "targets": ["install"]
    },
    {
      "name": "macos-x64-release",
      "configurePreset": "macos-x64-release",
      "displayName": "Build ninja-multi-vcpkg",
      "description": "Build ninja-multi-vcpkg Configurations",
      "configuration": "Release",
      "targets": ["install"]
    },
    {
      "name": "macos-arm64-release",
      "configurePreset": "macos-arm64-release",
      "displayName": "Build ninja-multi-vcpkg",
      "description": "Build ninja-multi-vcpkg Configurations",
      "configuration": "Release",
      "targets": ["install"]
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release",
      "displayName": "Build ninja-multi-vcpkg",
      "description": "Build ninja-multi-vcpkg Configurations",
      "configuration": "Release",
      "targets": ["install"]
    }
  ],
  "testPresets": [

  ]
}